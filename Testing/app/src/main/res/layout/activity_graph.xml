<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petr.testing.GraphActivity">


    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:id="@+id/lineChart"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
    />

    <!-- Projects Button -->
    <Button
        android:id="@+id/projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goToProjects"
        android:text="Projects"
        app:layout_constraintBottom_toTopOf="@+id/lineChart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp" />

    <!-- Actual Project Name label -->
    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/projects"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintBaseline_toBaselineOf="@+id/projects"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="8dp" />

    <!-- Button to report page -->
    <ImageButton
        android:contentDescription="Zadej report"
        android:id="@+id/goToReportButton"
        android:onClick="goToReport"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/smart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineChart"
        app:layout_constraintRight_toRightOf="@id/nudgeMyTeam" />

    <!-- Button to Nudge all -->
    <ImageButton
        android:contentDescription="Jebni vsetkych po palici, kokotov jednych"
        android:id="@+id/nudgeMyTeam"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/fist"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineChart"
        app:layout_constraintLeft_toLeftOf="@id/goToReportButton" />


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petr.testing.FirstActivity">

    <!-- User input -->
    <EditText
        android:id="@+id/loginTB"
        android:hint="@string/usr_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="12"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_border"
        android:padding="5dp"
        android:layout_marginTop="108dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
    />

    <!-- Password input -->
    <EditText
        android:id="@+id/passwordTB"
        android:hint="@string/pswd_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="12"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@drawable/edittext_border"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/loginTB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <!-- Sign In button -->
    <Button
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:onClick="singInUsers"
        android:text="@string/button_sign_in"
        android:background="#2ac9aa"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/signUpButton"
    />

    <!-- Sign up button -->
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="signUpUsers"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:text="@string/button_sign_up"
        android:background="#2ac9aa"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
    />
</android.support.constraint.ConstraintLayout>
